<odoo>
  <data>
     <record id="stock_picking_editing_security" model="ir.ui.view">
        <field name="name">stock form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">

               <xpath expr="//sheet/group/group/field[@name='location_id']" position="before">

                <field name="popup_bool" readonly="1"/>

            </xpath>

              <xpath expr="//sheet/notebook/page/field[@name='move_ids_without_package']" position="attributes">

                 <attribute name="attrs">{'readonly':[('popup_bool','=',True)]}</attribute>
                    </xpath>

             <xpath expr="//sheet/notebook/page/field[@name='move_line_ids_without_package']" position="attributes">

                 <attribute name="attrs">{'readonly':[('popup_bool','=',True)]}</attribute>
                    </xpath>







        </field>
     </record>
  </data>
</odoo>